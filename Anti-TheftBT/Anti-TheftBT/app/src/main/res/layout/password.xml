<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/tvAskForPasswordID"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="@string/tvAskForPasswordText"
			android:textSize="18dp"
			android:layout_weight="10"
			android:gravity="center_vertical"
			android:paddingLeft="10dp"/>

		<ToggleButton
			android:id="@+id/tbAskForPasswordID"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="New ToggleButton"
			android:layout_weight="1"/>
	</LinearLayout>

	<EditText
		android:id="@+id/etPasswordCurrentID"
		android:layout_width="260dp"
		android:layout_height="59dp"
		android:inputType="numberPassword"
		android:ems="10"
		android:layout_gravity="center_horizontal"
		android:hint="Enter current password"
		android:gravity="center"/>

	<EditText
		android:id="@+id/etPasswordNewID"
		android:layout_width="260dp"
		android:layout_height="57dp"
		android:inputType="numberPassword"
		android:ems="10"
		android:layout_gravity="center_horizontal"
		android:hint="Enter new password"
		android:gravity="center"/>

	<EditText
		android:id="@+id/etCPasswordNewID"
		android:layout_width="260dp"
		android:layout_height="59dp"
		android:inputType="numberPassword"
		android:ems="10"
		android:layout_gravity="center_horizontal"
		android:hint="Re-enter new password"
		android:gravity="center"/>

	<Button
		android:id="@+id/bPasswordID"
		android:layout_width="120dp"
		android:layout_height="60dp"
		android:text="@string/PasswordButtonText"
		android:layout_gravity="center_horizontal"/>

</LinearLayout>
