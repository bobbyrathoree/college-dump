<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="49dp">

		<TextView
			android:id="@+id/missingSoundTitleID"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:text="@string/missingSoundTitleText"
			android:textSize="15dp"
			android:gravity="center_vertical|center_horizontal"
			android:background="#c8ff7373"
			android:textColor="#000000"/>

		<ListView
			android:id="@+id/missingSoundListID"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>

	</LinearLayout>

	<Button
		android:id="@+id/missingSoundButtonID"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:text="@string/missingSoundButtonText"
		android:textSize="17dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginBottom="-5dp"
		android:layout_marginLeft="-4dp"
		android:layout_marginRight="-4dp"/>

</RelativeLayout>